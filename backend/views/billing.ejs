<%- include('partials/header') %>
<main class="container">
  <h1>Billing & Invoices</h1>
  <section class="card">
    <table>
      <thead>
        <tr>
          <th>Bill ID</th>
          <th>Patient</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% bills.forEach(bill => { %>
        <tr>
          <td>#<%= bill.bill_id %></td>
          <td><%= bill.first_name %> <%= bill.last_name %></td>
          <td>$<%= bill.amount %></td>
          <td>
            <span
              class="status-pill <%= bill.status === 'Paid' ? 'bg-success' : 'bg-danger' %>"
              ><%= bill.status %></span
            >
          </td>
          <td>
            <a
              href="/billing/download/<%= bill.bill_id %>"
              class="btn-secondary"
              style="text-decoration: none; font-size: 0.8rem"
              >ðŸ“¥ Download PDF</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </section>
</main>
<%- include('partials/footer') %>
